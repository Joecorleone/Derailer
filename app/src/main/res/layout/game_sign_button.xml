<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <ImageView
        android:id="@+id/iv_shadow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@+id/iv_sign"
        android:layout_alignBottom="@+id/iv_sign"
        android:layout_alignStart="@+id/iv_sign"
        android:layout_alignEnd="@+id/iv_sign"
        android:layout_marginBottom="@dimen/sign_deviation_bottom"
        android:layout_marginTop="@dimen/sign_deviation_top"
        android:src="@drawable/sign_play_shadow"
        android:adjustViewBounds="true"
        android:cropToPadding="false"/>

    <ImageView
        android:id="@+id/iv_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/sign_deviation_bottom"
        android:src="@drawable/sign_play"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>