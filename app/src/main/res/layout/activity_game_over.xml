<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Over"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin_small"
        android:background="@drawable/header_sign"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="30sp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>

        <RelativeLayout
            android:id="@+id/rl_place2"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_place2_dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textSize="20sp"
                android:maxLines="1"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/activity_vertical_margin_small"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_place2_podium"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_above="@id/tv_place2_dist"
                android:layout_centerHorizontal="true"
                android:background="@drawable/podium_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="2"
                    android:textColor="@color/podium_number"
                    android:textSize="45sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_place2_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textSize="20sp"
                    android:maxLines="1" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:id="@+id/iv_place2_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:layout_above="@+id/ll_place2_podium"
                android:layout_marginStart="@dimen/activity_horizontal_margin_small"
                android:layout_marginEnd="@dimen/activity_horizontal_margin_small"
                android:layout_marginBottom="@dimen/activity_vertical_margin_small"/>

            <ImageView
                android:id="@+id/iv_place2_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:layout_above="@+id/ll_place2_podium"
                android:layout_marginStart="@dimen/activity_horizontal_margin_small"
                android:layout_marginEnd="@dimen/activity_horizontal_margin_small"
                android:layout_marginBottom="@dimen/activity_vertical_margin_small"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_place1"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_place1_dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textSize="20sp"
                android:maxLines="1"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/activity_vertical_margin_small"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_place1_podium"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_above="@id/tv_place1_dist"
                android:layout_centerHorizontal="true"
                android:background="@drawable/podium_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="1"
                    android:textColor="@color/podium_number"
                    android:textSize="45sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_place1_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textSize="20sp"
                    android:maxLines="1" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:id="@+id/iv_place1_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:layout_above="@+id/ll_place1_podium"
                android:layout_marginStart="@dimen/activity_horizontal_margin_small"
                android:layout_marginEnd="@dimen/activity_horizontal_margin_small"
                android:layout_marginBottom="@dimen/activity_vertical_margin_small"/>

            <ImageView
                android:id="@+id/iv_place1_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:layout_above="@+id/ll_place1_podium"
                android:layout_marginStart="@dimen/activity_horizontal_margin_small"
                android:layout_marginEnd="@dimen/activity_horizontal_margin_small"
                android:layout_marginBottom="@dimen/activity_vertical_margin_small"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_place3"
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_place3_dist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textSize="20sp"
                android:maxLines="1"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/activity_vertical_margin_small"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_place3_podium"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:background="@drawable/podium_bg"
                android:layout_above="@id/tv_place3_dist"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="45sp"
                    android:textStyle="bold"
                    android:textColor="@color/podium_number"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/tv_place3_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20sp"
                    android:maxLines="1"
                    android:layout_gravity="center_horizontal"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <ImageView
                android:id="@+id/iv_place3_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:layout_above="@+id/ll_place3_podium"
                android:layout_marginStart="@dimen/activity_horizontal_margin_small"
                android:layout_marginEnd="@dimen/activity_horizontal_margin_small"
                android:layout_marginBottom="@dimen/activity_vertical_margin_small"
                android:foregroundGravity=""/>

            <ImageView
                android:id="@+id/iv_place3_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:layout_above="@+id/ll_place3_podium"
                android:layout_marginStart="@dimen/activity_horizontal_margin_small"
                android:layout_marginEnd="@dimen/activity_horizontal_margin_small"
                android:layout_marginBottom="@dimen/activity_vertical_margin_small"/>

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>



    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal|bottom"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/activity_vertical_margin_small">

        <Button
            android:id="@+id/bNewTry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:background="@drawable/button_restart_state" />

        <Button
            android:id="@+id/bMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:background="@drawable/button_menu_state" />


    </LinearLayout>


</LinearLayout>