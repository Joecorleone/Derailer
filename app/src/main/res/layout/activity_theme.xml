<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gras">

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a theme"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_vertical_margin_small"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:background="@drawable/train_header_sign_bg"
        android:textSize="30sp"/>

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/tv_header"
        android:background="@color/grey"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/v_divider"
        android:layout_centerHorizontal="true"
        android:scrollbars="vertical"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sign_back_shadow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:rotation="-10"
        android:layout_marginStart="-5dp"
        android:layout_marginBottom="-10dp"/>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sign_back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:rotation="-10"
        android:layout_marginStart="-5dp"
        android:layout_marginBottom="-5dp"/>

</RelativeLayout>