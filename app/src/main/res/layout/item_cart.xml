<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_cart"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_vertical_margin_small"
    android:layout_marginRight="@dimen/activity_vertical_margin_small">

    <ImageView
        android:id="@+id/iv_cart_color"
        android:layout_width="@dimen/cart_settings_width"
        android:layout_height="wrap_content"
        android:src="@drawable/theme01_cart01_color"
        android:adjustViewBounds="true"/>

    <ImageView
        android:id="@+id/iv_cart"
        android:layout_width="@dimen/cart_settings_width"
        android:layout_height="wrap_content"
        android:src="@drawable/theme01_cart01"
        android:adjustViewBounds="true"/>

    <ImageView
        android:id="@+id/iv_indicator"
        android:layout_width="@dimen/player_indicator_size"
        android:layout_height="@dimen/player_indicator_size"
        android:layout_alignBottom="@+id/iv_cart"
        android:layout_alignEnd="@+id/iv_cart"
        android:layout_alignRight="@+id/iv_cart"/>

</RelativeLayout>