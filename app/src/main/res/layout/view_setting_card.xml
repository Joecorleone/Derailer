<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_option"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin_small">

    <ImageView
        android:id="@+id/iv_option"
        android:layout_width="@dimen/option_width"
        android:layout_height="@dimen/option_width"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/option_obstacle_many"/>

    <TextView
        android:id="@+id/tv_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/option_obstacle_none"
        android:textSize="@dimen/option_description_text_size"
        android:layout_alignBottom="@+id/iv_option"
        android:layout_alignEnd="@+id/iv_option"
        android:layout_marginEnd="@dimen/activity_horizontal_margin_tiny"/>

</RelativeLayout>