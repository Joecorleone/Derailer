<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_theme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:clickable="true"
    android:onClick="selectTheme"
    tools:context="com.example.cetty.derailer.ThemeActivity">

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/select_not"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_select"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="8dp"
        android:text="Title"
        android:textColor="@color/textColor"
        android:textSize="25sp"/>

    <RelativeLayout
        android:id="@+id/rl_theme_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_select"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="32dp"
        android:background="@drawable/menu_background01">

        <ImageView
            android:id="@+id/iv_theme_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/theme01_cart01_color"
            android:rotation="180"/>

        <ImageView
            android:id="@+id/iv_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/theme01_cart01"
            android:rotation="180"/>
    </RelativeLayout>

</RelativeLayout>